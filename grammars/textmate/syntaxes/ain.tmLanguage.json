{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ain",
  "patterns": [
    {
      "include": "#headings"
    },
    {
      "include": "#escapes"
    },
    {
      "include": "#envvars"
    },
    {
      "include": "#executables"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "headings": {
      "patterns": [
        {
          "name": "keyword.control.header.ain",
          "match": "(?i)^\\s*\\[(config|host|query|headers|method|body|backend|backendoptions)\\]\\s*(?=(?<!`)#|$)"
        }
      ]
    },
    "escapes": {
      "patterns": [
        {
          "name": "source.ain",
          "match": "\\\\`"
        },
        {
          "name": "source.ain",
          "match": "`\\$\\{"
        },
        {
          "name": "source.ain",
          "match": "`\\$\\("
        },
        {
          "name": "source.ain",
          "match": "`#"
        }
      ]
    },
    "envvars": {
      "name": "keyword.other.envvar.ain",
      "begin": "\\$\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.section.interpolation.begin.custom" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.interpolation.end.custom" }
      },
      "patterns": [
        {
          "name": "keyword.other.envvar.ain",
          "match": "`\\}"
        }
      ]
    },
    "executables": {
      "name": "entity.name.class",
      "begin": "\\$\\(",
      "beginCaptures": {
        "0": { "name": "punctuation.section.interpolation.begin.custom" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.section.interpolation.end.custom" }
      },
      "patterns": [
        {
          "match": "`\\)",
          "name": "entity.name.class"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.custom",
          "patterns": [
            {
              "match": "\\\\'",
              "name": "constant.character.escape.custom"
            }
          ]
        },
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.custom",
          "patterns": [
            {
              "match": "\\\\\"",
              "name": "constant.character.escape.custom"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.ain",
          "match": "#.*$"
        }
      ]
    }
  },
  "scopeName": "source.ain"
}
